package com.proj.calculator;

import java.util.Scanner;

public class CalcConfig {
	char opt;
	Double result = 0.0;
	
	Scanner input = new Scanner(System.in);
	Double n, m;
	
	public void menu() {
		
			 System.out.println("Digite um numero para come√ßar");
			 
			 while (opt != 'h') {
			 n = input.nextDouble();
			 result = n;
			 opt= input.next().charAt(0);
			 
			 switch (opt) {
			 case 'a':
				 result = input.nextDouble();
				 result = n + result;
				 System.out.println("soma " +  result);	
				 opt= input.next().charAt(0);
			 case 's': 
				 m = input.nextDouble();
				 result = result - m;
				 System.out.println("sub " +  result);
				 opt= input.next().charAt(0);
			 case 'm':
				 m = input.nextDouble();
				 result = result * m;
				 System.out.println("mult " +  result);
				 opt= input.next().charAt(0);
			 case 'd':
				 m = input.nextDouble();
				 result = result / m;
				 System.out.println("div " +  result);	
				 
					 
				 
			 }
			 }
	}

}
